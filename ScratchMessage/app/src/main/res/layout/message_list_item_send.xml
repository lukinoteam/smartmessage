<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/cvImgHolder"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgAvatarSend"
            android:src="@mipmap/default_avatar"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp" />
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/imgAvatarReceive"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <TextView
        android:id="@+id/tvMessageContent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_55sdp"
        android:background="@drawable/solid_send_fill_border"
        android:layout_toStartOf="@id/cvImgHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgPictureContent"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toStartOf="@id/cvImgHolder"
        android:scaleType="fitEnd"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp" />

</RelativeLayout>